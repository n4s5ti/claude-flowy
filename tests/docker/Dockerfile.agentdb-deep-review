# Dockerfile for comprehensive agentdb v1.6.1 feature testing
# Tests ReasoningBank, vector search, semantic memory, and HNSW indexing
FROM node:20-slim

# Install dependencies for native modules + testing tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    jq \
    python3 \
    make \
    g++ \
    time \
    bc \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /test

# Copy package files and source
COPY package.json package-lock.json ./
COPY bin/ ./bin/
COPY src/ ./src/
COPY scripts/ ./scripts/

# Copy .env file with API keys
COPY .env ./.env

# Install dependencies (including agentdb 1.6.1)
RUN npm install --legacy-peer-deps

# Copy test script
COPY tests/docker/test-agentdb-features.sh /test/test-agentdb-features.sh
RUN chmod +x /test/test-agentdb-features.sh

# Set entrypoint to run test script
ENTRYPOINT []
CMD ["/bin/bash", "/test/test-agentdb-features.sh"]
